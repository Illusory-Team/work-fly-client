{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "rules": {
    "color-hex-case": "lower",
    "selector-class-pattern": null,
    "alpha-value-notation": "number",
    "color-function-notation": "legacy"
  },
  "ignoreFiles": [
    "build/*",
    "styles/lib/_style.scss"
  ]
}
