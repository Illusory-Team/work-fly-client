{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"typeRoots": ["node_modules/@types", "typing/app.d.ts"],
		"baseUrl": "./src",
		"paths": {
			"@/components/*": ["components/*"],
			"@/ui/*": ["components/ui/*"],
			"@/hooks/*": ["hooks/*"],
			"@/config/*": ["config/*"],
			"@/services/*": ["services/*"],
			"@/utils/*": ["utils/*"],
			"@/store/*": ["store/*"],
			"@/assets/*": ["assets/*"],
			"@/screens/*": ["screens/*"],
			"@/styles/*": ["styles/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
